<div class="content-wrapper">
  <div class="content-block">
    <% @posts.each do |post| %>
        <div class="content">

            <div class="text">
              <p><%= post.content %></p>
            </div><!-- text --->
          <!--  画像アップロードここから  --------------------------->
            <% if post.images.attached? %>
              <div class="images">
                <% post.images.each do |image| %>
                  <%= image_tag image %>
                <% end %>
              </div><!-- images -->
            <% end %><!-- ifのend -->
            <!--  画像アップロードここまで  --------------------------->
            <div class="user-about">
                <div class="image">
                  <% if post.user.image.attached? %>
                    <%= image_tag post.user.image %>
                  <% else %>
                    <%= image_tag "nouser.png" %>
                  <% end %>

                </div><!-- image -->
                <div class="profile">
                    <div class="name-history">
                      <div class="name">
                        <!-- delegateを使ってとる -->
                        <%= post.user.name %>
                      </div><!-- name -->
                      <div class="learning-history">
                        <%= "学習歴：#{post.user.learning_history}年" %>
                      </div><!-- learning-history -->
                    </div><!-- name-history -->
                    <div class="purpose">
                      <%= "勉強目的：#{post.user.purpose}" %>
                    </div><!-- purpose -->
                </div><!-- profile -->
            </div><!-- user-about -->


            <div claass="action-menu">
              <div class="like">

              </div><!-- like -->
              <div class="comment">

              </div><!-- comment -->
            </div><!-- action-menu -->
          </div><!-- content -->
      <% end %>


  </div><!-- content-block -->
  <div class="sidebar">
    <div class="box"></div>
    <div class="box"></div>
  </div><!-- sidebar -->
</div><!-- content-wrapper -->
